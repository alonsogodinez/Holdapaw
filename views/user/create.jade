.remodal.radius-extra#registrarUsuarioModal(data-remodal-id='registrarUsuarioModal',data-remodal-options='closeOnConfirm: false')
  button.remodal-close(data-remodal-action='close')
  h2  Registrate !

  form#createUserForm(enctype='multipart/form-data', name='createUserForm',data-parsley-validate='')
      fieldset.form-group
          .col-xs-12
            label Email
          .col-sm-offset-2.col-sm-8
            input.form-control(type='email', name='email', data-parsley-required='true',data-parsley-type='email',data-parsley-trigger='focusout',
          data-parsley-email-Exists='true')
      fieldset.form-group
          .col-xs-12
            label Contraseña
          .col-sm-offset-2.col-sm-8
            input#password1.form-control(type='password', name='password', data-parsley-required='true',data-parsley-trigger='change',data-parsley-minlength='8')
      fieldset.form-group
          .col-xs-12
            label Confirmacion de contraseña
          .col-sm-offset-2.col-sm-8
            input.form-control(type='password', name='password2', data-parsley-equalto='#password1',data-parsley-required='true',data-parsley-trigger='change')

      fieldset.form-group
        .col-sm-offset-2.col-sm-8
          .col-sm-6.np.pr-input-sm
            label Nombres
            input.form-control(type='text', name='firstName', data-parsley-required='true',data-parsley-trigger='change')
          .col-sm-6.np
            label Apellidos
            input.form-control(type='text', name='lastName', data-parsley-required='true',data-parsley-trigger='change')
      fieldset.form-group
        .col-sm-offset-2.col-sm-8
          .col-sm-6.np.pr-input-sm
            label DNI
            input.form-control(type='text', name='dni', maxlength=8,data-parsley-type='digits',data-parsley-required='true',data-parsley-minlength='8',data-parsley-trigger='change')

          .col-sm-6.np
            label Telefono/Celular
            input.form-control(type='text', name='cellphone', data-parsley-type='digits',data-parsley-required='true',data-parsley-trigger='change')
      fieldset.form-group
          .col-xs-12
            label Foto
          .col-sm-offset-2.col-sm-8
            input.form-control.mb(type='file', name='photo',accept='image/*')
      .col.sm-10.mb
        button#createUserBtn.radius.remodal-confirm.btn-celestito(type='submit') Registrar
        button.radius.remodal-cancel(data-remodal-action='cancel') Cancelar

